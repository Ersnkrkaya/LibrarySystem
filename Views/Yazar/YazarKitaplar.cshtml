@using MvcKutuphaneUdemy.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Yazarı: @ViewBag.yzr</h2>

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Durum</th>
        <th>Kategori</th>
        <th>Yayınevi</th>
    </tr>
    @foreach(var kitap in Model)
    {
        <tr>
            <td>@kitap.ID</td>
            <td>@kitap.AD</td>
            <td>@kitap.TBLKATEGORI.AD</td>
            <td>@kitap.YAYINEVI</td>
        </tr>
    }
</table>