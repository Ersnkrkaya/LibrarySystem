@using MvcKutuphaneUdemy.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Yazarın Kitapları</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var yazar in Model) { 
        <tr>
            <td>@yazar.ID</td>
            <td>@yazar.AD</td>
            <td>@yazar.SOYAD</td>
            <td>@Html.ActionLink("Sil","YazarSil",new { id = yazar.ID },new { @class="btn btn-danger",onclick="return confirm ('Silmek İstiyor Musunuz?')"})</td>
            <td><a href="/Yazar/YazarGetir/@yazar.ID" class="btn btn-warning">Yazar Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@yazar.ID" class="btn btn-default" style="background-color:lightsalmon">YazarınKitapları</a></td>
        </tr>}
    </tbody>
</table>
<a href="/Yazar/YazarEkle" class="btn btn-primary">Yazar Ekle</a>
