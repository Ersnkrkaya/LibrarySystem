@model MvcKutuphaneUdemy.Models.Entity.TBLMESAJLAR
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>YeniMesaj</h2>

<form class="form-group" method="post">
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Alıcı Mail</label>
        @Html.TextBoxFor(x => x.ALICI, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Konu</label>
        @Html.TextBoxFor(x => x.KONU, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">İçerik</label>
        @Html.TextAreaFor(x => x.ICERIK, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-info" id="Btn1">Mesaj Gönder</button>
    </div>
</form>