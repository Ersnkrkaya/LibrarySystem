@model MvcKutuphaneUdemy.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YeniKitap</h2>

<form class="form-group" method="post">
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Kitap Adı</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Kitap Kategorisi</label>
        @Html.DropDownListFor(x => x.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new {@class="form-control"})
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Kitap Yazar</label>
        @Html.DropDownListFor(x => x.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Basım Yılı</label>
        @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Yayınevi</label>
        @Html.TextBoxFor(x => x.YAYINEVI, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Sayfa Sayısı</label>
        @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-info" id="Btn1">Kitap Ekle</button>
    </div>
    @*@Html.HiddenFor(k=>k.DURUM)*@
    <input type="hidden" name="DURUM" value="True" />
</form>