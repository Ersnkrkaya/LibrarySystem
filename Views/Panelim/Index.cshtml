@model MvcKutuphaneUdemy.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>
@using (Html.BeginForm("Index", "Panelim", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td>
                @Html.LabelFor(x => x.ID)
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
            </td>
            @Html.LabelFor(x => x.MAIL)
            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control" })
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.KULLANICIADI)
                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.AD)
                @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.SOYAD)
                @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>

                @Html.LabelFor(x => x.SIFRE)
                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.OKUL)
                @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td><button class="btn btn-warning">Şifre Güncelle</button></td>
        </tr>
    </table>
}