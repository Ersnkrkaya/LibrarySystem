@using MvcKutuphaneUdemy.Models.Entity
@*@model List<TBLUYELER>*@

@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Uye ID</th>
            <th>Uye ADI</th>
            <th>Uye SOYADI</th>
            <th>Okul</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Üye Kitap Geçmişi</th>
        </tr>
    </thead>
    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.ID</td>
            <td>@uye.AD</td>
            <td>@uye.SOYAD</td>
            <td>@uye.OKUL</td>
            <td><a href="/Uye/UyeSil/@uye.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@uye.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Uye/UyeKitapGecmis/@uye.ID" class="btn btn-success" style="background-color:lightseagreen">Üye Kitap Geçmişi</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa}))
<a href="/Uye/YeniUye" class="btn btn-primary">Yeni Uye Ekle</a>