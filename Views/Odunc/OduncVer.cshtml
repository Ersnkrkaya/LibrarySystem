@model MvcKutuphaneUdemy.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>OduncVer</h2>

<form class="form-group" method="post">
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Kitap Id</label>
        @*@Html.TextBoxFor(x => x.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.TBLKITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Uye Ad Soyad</label>
        @Html.DropDownListFor(x => x.TBLUYELER.ID, (List<SelectListItem>)ViewBag.dgr1,new { @class="form-control"})
        @*@Html.TextBoxFor(x => x.UYE, new { @class = "form-control" })*@
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Personel Id</label>
        @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control" })
        @*@Html.DropDownListFor(x => x..ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })*@
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div>
        <label style="margin-top:15px;margin-bottom:10px;">Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>

    <div style="margin-top:15px;">
        <button class="btn btn-group" style="background-color:#a330b5;color:white;">Kitabı Ödünç Ver</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>
</form>