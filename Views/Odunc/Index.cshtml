<table class="table table-bordered">
    <thead>
        <tr>
            <th>İşlem ID</th>
            <th>Kitap Adı</th>
            <th>Üye</th>
            <th>Personel</th>
            <th>Alış Tarihi</th>
            <th>İade Tarihi</th>
            <th>İade Al</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.ID</td>
                <td>@k.TBLKITAP.AD</td>
                <td>@k.TBLUYELER.AD&nbsp @k.TBLUYELER.SOYAD</td>
                <td>@k.PERSONEL</td>
                <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>
                <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-danger">Kitabı İade Et</a></td>
            </tr>
        }
    </tbody>
</table>